							<Image Source="Resources/Images/unlock-icon.png" Style="{StaticResource ImageEnabled}">

							</Image>
						</Button>
						<Button Name="ButtonHome" Click="ButtonHome_Click" Style="{StaticResource styleButton}" Height="50">
							<Image Source="Resources/Images/Home-icon.png" Style="{StaticResource ImageEnabled}">

							</Image>
						</Button>

						<Button Name="ButtonStop" Click="ButtonStop_Click" Style="{StaticResource styleButton}" Height="50" >
							<Image Source="Resources/Images/stop-icon.png" Style="{StaticResource ImageEnabled}">

							</Image>
						</Button>
					</StackPanel>

				</RibbonGroup>



			</RibbonTab>
