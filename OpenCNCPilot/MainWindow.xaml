									<xctk:IntegerUpDown Name="UpDown" Margin="5" />-->
										<!--<Button Margin="5"	Padding="5" Content="Single Cycle"></Button>-->

										<!--<Button Margin="5"	Padding="5" Content="Stop Cycle"></Button>-->
										<!-- Make combo stop start button-->



									</StackPanel>
									<StackPanel  Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">

										<TextBlock VerticalAlignment="Center" Margin="5">Experiment File:</TextBlock>
										<Button Name="btnAcquisitionExperimentFile" Margin="5" Padding="5" Content="Select" Click="BtnAcquisitionFileOpen_Click"></Button>
										<TextBox  Name="tbAcquisitionExperimentPath" Width="250" Text="{util:SettingBinding AcquisitionExperimentPath}" IsReadOnly="True" VerticalContentAlignment="Center" Height="22"/>

									</StackPanel>
									<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
										<Button Margin="5"	Padding="5" FontSize="26" Name="btnRunCycle" Content="Run Cycle" Width="150" Click="ButtonStartCycle_Click"></Button>
										<Button Margin="5"	Padding="5" FontSize="26" Name="btnStopCycle" Content="Stop Cycle" Width="150" Click="ButtonStopCycle_Click"></Button>
									</StackPanel>
								</StackPanel>
							</GroupBox>

							<GroupBox>
								<GroupBox.Header>
									<TextBlock HorizontalAlignment="Center">Timelapse Acquisition</TextBlock>
								</GroupBox.Header>
								<StackPanel Orientation="Vertical">
									
									<StackPanel  Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
										<TextBlock VerticalAlignment="Center" Margin="5">Start:</TextBlock>
										<!--<Button Margin="5" Padding="5" Content="Move" Name="btn" ></Button>-->
										<xctk:DateTimePicker  Value="{util:SettingBinding tlStartDate}" Height="25" Width="250" Name="tlStartDateTime" Margin="5" />
										<CheckBox IsChecked="{util:SettingBinding StartNow}" Name="cbStartNow"   Content="Start Now" VerticalAlignment="Center" ></CheckBox>
									</StackPanel>
									<StackPanel  Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
										<TextBlock VerticalAlignment="Center" Margin="5">End In:</TextBlock>
