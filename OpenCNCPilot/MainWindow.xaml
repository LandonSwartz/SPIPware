										<ComboBox Height="22"
										SelectedValue="{util:SettingBinding tlEndIntervalType}"
										ItemsSource="{Binding IntervalList, Mode=OneWay}"
										SelectedValuePath="Key"
										DisplayMemberPath="Value" />
										<TextBlock VerticalAlignment="Center" Margin="5">Run Every:</TextBlock>
										<xctk:IntegerUpDown Height="22" Value= "{util:SettingBinding tlInterval}" Minimum="0" Name="udTlInterval" Margin="5" />
										<ComboBox Height="22"
										SelectedValue="{util:SettingBinding tlIntervalType}"
										ItemsSource="{Binding IntervalList, Mode=OneWay}"
										SelectedValuePath="Key"
										DisplayMemberPath="Value" />
										<!--<ComboBox  SelectedIndex="0" Height="22">
											<ComboBoxItem Content="hours"></ComboBoxItem>
											<ComboBoxItem Content="days"></ComboBoxItem>
											<ComboBoxItem Content="weeks"></ComboBoxItem>
										</ComboBox>-->
									</StackPanel>
									<StackPanel  Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
					
											<TextBlock VerticalAlignment="Center" Margin="5">Experiment File:</TextBlock>
											<Button Name="btnTimeLapseExperimentFile" Margin="5" Padding="5" Content="Select" Click="BtnTlExperimentFileOpen_Click"></Button>
											<TextBox  Name="tbTimeLapseExperimentPath" Width="250" Text="{util:SettingBinding tlExperimentPath}" IsReadOnly="True" VerticalContentAlignment="Center" Height="22"/>
							
									</StackPanel>
									<StackPanel  Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
										<Button Click="ButtonStartTimeLapse_Click" Margin="5"	Padding="5" FontSize="16" Name="btnRunTimeLapse" Content="Run Timelapse"></Button>
										<Button Click="ButtonStopTimeLapse_Click" Margin="5"	Padding="5" FontSize="16" Name="btnStopTimeLapse" Content="Stop Timelapse"></Button>
									</StackPanel>
								</StackPanel>


							</GroupBox>
					
						</StackPanel>
